<html>
  <head>
    <title>User list</title>
  </head>
  <body>
    <div style="font-size:30px;">Bienvenido:
      {{params.user.firstName}}
      {{params.user.lastName}}
    </div>
    <div style="font-size:24px; margin-top:10px">Rol: {{params.user.role}}</div>
    <div style="font-size:14px; margin-top:15px">email:
      {{params.user.email}}</div>
    <div style="margin-top:10px">
      <button onclick="logout()">Logout</button>
    </div>
    <h1>User list</h1>

    <div
      id="errorPanel"
      style="margin-top:10px; border:1px; border-color:#ff0000; "
    >
      <p>
        <h2 id="errorPanelText"></h2>
        <div id="errorPanelDetail"></div>
      </p>
    </div>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each params.data}}
          <tr>
            <td>{{id}}</td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{email}}</td>
            <td>{{role}}</td>
            <td>
              <button onclick="changeRole('{{id}}')">Change Role</button>
            </td>
            <td>
              <button onclick="deleteUser('{{id}}')">Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <script src="/js/index.js"></script>
  </body>
</html>